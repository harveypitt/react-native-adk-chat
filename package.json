{
  "name": "react-native-adk-chat",
  "version": "1.0.0",
  "description": "React Native ADK Chat - Google Agent Engine integration with proxy service",
  "private": true,
  "workspaces": [
    "packages/*",
    "example/demo-app"
  ],
  "scripts": {
    "clean": "rm -rf node_modules packages/*/node_modules example/*/node_modules",
    "client": "pnpm --filter @react-native-adk-chat/client dev",
    "demo": "pnpm --filter @react-native-adk-chat/demo-app start",
    "demo:agentengine": "node scripts/start-demo-agentengine.js",
    "demo:cloudrun": "node scripts/start-demo-cloudrun.js",
    "install:all": "pnpm install",
    "server:agentengine": "pnpm --filter @react-native-adk-chat/server-agentengine dev",
    "server:agentengine:start": "pnpm --filter @react-native-adk-chat/server-agentengine start",
    "server:cloudrun": "pnpm --filter @anthropic/adk-proxy-cloudrun dev",
    "server:cloudrun:start": "pnpm --filter @anthropic/adk-proxy-cloudrun start"
  },
  "keywords": [
    "react-native",
    "adk",
    "agent-engine",
    "google-cloud",
    "chat",
    "ai"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0"
  }
}
